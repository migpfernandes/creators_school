<h1>Articles</h1>

<table>
	<% @articles.each do |art|%>
		<tr>
			<td><%= art.title %></td>
			<td><%= link_to "Ver" , art %></td>
			<td><%= link_to "Editar" , edit_article_path(art) %></td>
			<td><%= link_to "Remover" , art, method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>
	<%end%>
</table>


<%= link_to "New Article", new_article_path %>